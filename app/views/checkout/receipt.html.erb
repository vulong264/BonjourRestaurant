<h1>Receipt</h1>
<h2>Thanks for your order. This is your receipt</h2>
<div class="container-fluid">
<%= form_for @order, url:checkout_confirm_path, method:'post' do |f|%>
<% if @order.errors.present?%>
<div class="alert alert-danger">
<%= @order.errors.full_messages.to_sentence%>
</div>
<%end%>
<div class:"form-group">
Name: <%= @order.name%>
</div>
<div class:"form-group">
Address: <%= @order.address%>
</div>
<table class="table">
Item List
	<% @order.order_items.each do |order_item| %>
	<tr>
	<td><%= order_item.food_item.name %></td>
		<td><%= order_item.food_item.price %></td>
    <td><%= order_item.quantity %></td>
    </tr>
    <% end %>
</table>
<div>
Origin Price <%= number_to_currency @order.total_price%>
</div>
<div class:"form-group">
Discount Code <%= @order.discount_code %>
</div>
<div>
Price after discount <%= number_to_currency @order.discounted_price%>
</div>
<div class:"form-group">
Shipping Cost <%= number_to_currency @order.shipping_cost%>
</div>
<div class:"form-group">
Grand Total <%= number_to_currency @order.grand_total%>
</div>
<% end %>
</div>