<!DOCTYPE html>
<html>
  <head>
    <title>BonjourRestaurant</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<nav class="navbar navbar-light bg-faded">
    <a class="navbar-brand" href="/">Bonjour Restaurant</a>
  
  <ul class="nav navbar-nav">
    <li class="nav-item active">
      <a class="nav-link" href="#"><%= link_to "Menu",menu_path%></a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#"><%= link_to "Contact Us", contact_us_path%></a>
    </li>
  </ul>
  
    <%= form_tag(food_items_path, :method => 'get',id:"search-form", class:"form-inline pull-xs-right") do %>
      <%= text_field_tag :search, params[:search], placeholder:"Search", class: "form-control" %>
      <%= submit_tag "Search", class: "btn btn-outline-success"%>
    <% end %>
  
    
    
    
</nav>
<div class="container">  
	  <%= yield %>
    </div>
  </body>
</html>
